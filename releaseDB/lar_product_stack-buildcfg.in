# build everything that does not depend on art

basequal=${1}

build_bundle nubase-@NUTOOLS_DOT_VERSION@ ${basequal}
status=$?
if (( ${status} != 0)); then
  cat 1>&2 <<EOF
Build of nubase-@NUTOOLS_DOT_VERSION@ bundle failed with status ${status}
EOF
  return ${status}
fi

do_build pandora @PANDORA_VERSION@ ${basequal}:nu
do_build larpandoracontent @LARPANDORACONTENT_VERSION@ ${basequal}:nu

# add to manifest if no build - larsoft_data, mrb
prep_build larsoft_data @LARSOFT_DATA_VERSION@; add_to_manifest
prep_build mrb @MRB_VERSION@; add_to_manifest

return 0
