# build larsoft

basequal=${1}

# specify version to bootstrap and setup ups
check_ups v6_0_8

build_bundle larbase-@LARSOFT_DOT_VERSION@ ${basequal}
status=$?
if (( ${status} != 0)); then
  cat 1>&2 <<EOF
Build of larbase-@LARSOFT_DOT_VERSION@ bundle failed with status ${status}
EOF
  return ${status}
fi

build_bundle larsoftobj-@LARSOFTOBJ_DOT_VERSION@ ${basequal}
status=$?
if (( ${status} != 0)); then
  cat 1>&2 <<EOF
Build of larsoftobj-@LARSOFTOBJ_DOT_VERSION@ bundle failed with status ${status}
EOF
  return ${status}
fi

[[ "${build_label}" == py3 ]] && pyqual=:${build_label}

ensure_cetbuildtools v7_03_02

build_cet larpandoracontent @LARPANDORACONTENT_VERSION@ ${basequal}${pyqual}

# larcore tests disabled because of Jenkins build slave problems
build_cet -n larcore @LARCORE_VERSION@ ${basequal}${pyqual}
build_cet lardata @LARDATA_VERSION@ ${basequal}${pyqual}
build_cet larevt @LAREVT_VERSION@ ${basequal}${pyqual}
build_cet larsim @LARSIM_VERSION@ ${basequal}${pyqual}
build_cet larg4 @LARG4_VERSION@ ${basequal}${pyqual}
build_cet larreco @LARRECO_VERSION@ ${basequal}${pyqual}
# the single larana test likes to hang on Jenkins macOS build slaves
build_cet -n larana @LARANA_VERSION@ ${basequal}${pyqual}
build_cet larpandora @LARPANDORA_VERSION@ ${basequal}${pyqual}
build_cet larwirecell @LARWIRECELL_VERSION@ ${basequal}${pyqual}
build_cet larexamples @LAREXAMPLES_VERSION@ ${basequal}${pyqual}
build_cet lareventdisplay @LAREVENTDISPLAY_VERSION@ ${basequal}${pyqual}
build_cet larsoft @LARSOFT_VERSION@ ${basequal}${pyqual}
# do not distribute larbatch or larutils with a release candidate
#build_cet_null larbatch @LARBATCH_VERSION@
#build_cet_null larutils @LARUTILS_VERSION@

return 0
